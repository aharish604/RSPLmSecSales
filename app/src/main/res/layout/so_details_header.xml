<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_d_so_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_title_sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_d_so_payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:layout_marginRight="7dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/BLACK"
        android:gravity="end"
        android:textSize="@dimen/util_small_text_sp"
        />

    <TextView
        android:id="@+id/tv_d_so_payment_status_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_status"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_small_text_sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_d_so_payment_status"
        android:layout_marginRight="8dp"
       />

    <TextView
        android:id="@+id/tv_d_so_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_title_sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_d_so_number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_d_so_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/GREEN"
        android:textStyle="bold"
        android:textSize="@dimen/util_small_text_sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_d_so_number" />

    <TextView
        android:id="@+id/tv_d_so_dsc_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_value"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/util_small_text_sp"
        app:layout_constraintRight_toLeftOf="@+id/tv_d_so_amount"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_d_so_number" />
</androidx.constraintlayout.widget.ConstraintLayout>