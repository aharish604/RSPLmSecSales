<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <include layout="@layout/appbar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height_one_dip"
        android:background="@color/BLACK" >
    </LinearLayout>

    <include layout="@layout/ll_retiler_name_no" />

    <include layout="@layout/single_line_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_order_val"
                android:textColor="@color/BLACK"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_2sdp"
                android:gravity="center"
                android:text="@string/str_colon"
                android:textColor="@color/BLACK"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tv_so_total_order_val"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_tlsd"
                android:textColor="@color/BLACK"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:text="@string/str_colon"
                android:textColor="@color/BLACK"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tv_so_create_tlsd_amt"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BLACK"/>-->





    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal_4">
        <ScrollView
            android:layout_above="@+id/keyboard_custom_invoice_sel"
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" >
                    <TableLayout
                        android:id="@+id/crs_sku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" >
                        <TableRow
                            android:background="@color/GREY"
                            android:id="@+id/tr_crssku"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center"
                                android:textColor="@color/BLACK"
                                android:id="@+id/tv_crsname"
                                android:height="50dp"
                                android:text="@string/lbl_crs_sku_group"
                                android:textSize="@dimen/medium_text"
                                />
                        </TableRow>

                        <TableRow
                            android:background="@color/GREY"
                            android:id="@+id/tr_skuitems"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"/>
                    </TableLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/relativeLayout1" >
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        >
                        <TableLayout
                            android:id="@+id/report_table"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <TableRow
                                android:background="@color/GREY"
                                android:id="@+id/tr_soq"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="@color/BLACK"
                                    android:id="@+id/tv_sqq"
                                    android:height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:text="@string/lbl_ord_qty"
                                    android:textSize="@dimen/medium_text"
                                    android:layout_marginLeft="20dp"  />
                                <TextView
                                    android:textColor="@color/BLACK"
                                    android:id="@+id/tv_qrtystak"
                                    android:gravity="center_vertical|right"
                                    android:height="50dp"
                                    android:text="@string/lbl_pmr_scheme"
                                    android:textSize="@dimen/medium_text"
                                    android:layout_marginLeft="20dp"  />
                                <TextView
                                    android:textColor="@color/BLACK"
                                    android:id="@+id/tv_rate"
                                    android:text="@string/lbl_sec_scheme"
                                    android:height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:textSize="@dimen/medium_text"
                                    android:layout_marginLeft="20dp"  />
                                <TextView
                                    android:textColor="@color/BLACK"
                                    android:id="@+id/tv_dbstak"
                                    android:text="@string/lbl_net_amount"
                                    android:textSize="@dimen/medium_text"
                                    android:height="50dp"
                                    android:gravity="center_vertical|right"
                                    android:layout_marginLeft="20dp"  />

                            </TableRow>
                            <TableRow
                                android:background="@color/GREY"
                                android:id="@+id/tr_items"
                                android:layout_width="fill_parent"
                                android:layout_height="150dp">


                            </TableRow>


                        </TableLayout>

                    </HorizontalScrollView>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</LinearLayout>