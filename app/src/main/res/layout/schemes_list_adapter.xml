<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vertical_line_color"
    android:orientation="horizontal" >



    <TextView
        android:id="@+id/tv_scheme_name_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_point_one_dip"
        android:layout_marginRight="@dimen/margin_point_one_dip"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/padding_three_dip"
        android:paddingStart="@dimen/padding_three_dip"
        android:paddingRight="@dimen/padding_zero_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/medium_text" />



    <TextView
        android:id="@+id/tv_scheme_description_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_point_one_dip"
        android:layout_marginRight="@dimen/margin_point_one_dip"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/padding_three_dip"
        android:paddingStart="@dimen/padding_three_dip"
        android:paddingRight="@dimen/padding_zero_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/medium_text" />

</LinearLayout>