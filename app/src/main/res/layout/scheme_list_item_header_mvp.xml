<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal_4"
        android:layout_marginBottom="@dimen/padding_normal_4"
        android:elevation="1dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/UtilsItemSpacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="0dp">

                <LinearLayout
                    android:layout_width="@dimen/card_image_status"
                    android:layout_marginTop="9dp"
                    android:layout_height="@dimen/card_image_status"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivSchemeSlabType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="@color/primaryColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_scheme_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:lineSpacingExtra="1dp"
                        android:text="TextView"
                        android:textColor="@color/BLACK"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_scheme_valid_to"
                        style="@style/MediumTextStyleCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:visibility="gone"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="8dp"
                        android:gravity="left"
                        android:text="Valid To :27/07/2018"
                        android:textColor="@color/card_secondary_text_color" />

                    <TextView
                        android:id="@+id/tv_scheme_type"
                        style="@style/MediumTextStyleCard"
                        android:layout_width="@dimen/width_zero_dip"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="Normal Discount Based Scheme"
                        android:textColor="#232F34"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                    <!-- <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="center_vertical"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/tv_scheme_type"
                             android:visibility="gone"
                             style="@style/MediumTextStyleCard"
                             android:layout_width="@dimen/width_zero_dip"
                             android:layout_height="match_parent"
                             android:layout_marginEnd="0dp"
                             android:layout_marginStart="0dp"
                             android:layout_marginTop="8dp"
                             android:layout_weight="1"
                             android:text="Normal Discount Based Scheme"
                             android:textColor="#232F34"
                             android:textSize="14sp"
                             android:textStyle="bold" />

                         <TextView
                             android:id="@+id/tv_scheme_valid_to"
                             style="@style/UtilsSmallTextStyle"
                             android:layout_width="@dimen/width_zero_dip"
                             android:layout_height="match_parent"
                             android:layout_marginTop="8dp"
                             android:layout_marginEnd="0dp"
                             android:layout_marginStart="0dp"
                             android:layout_weight="0.8"
                             android:gravity="left"
                             android:paddingLeft="@dimen/padding_normal_16"
                             android:text="Valid To :27/07/2018"
                             android:textColor="@color/card_secondary_text_color"
                             android:textSize="@dimen/caps_small_text_sp" />
                     </LinearLayout>-->


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:layout_marginTop="20dp"
                android:text="Offer"
                android:textSize="16sp"
                android:textColor="@color/BLACK" />
            <TextView
                android:id="@+id/tv_scheme_slab_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="14sp"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:layout_marginTop="14dp"
                android:text="get 10"
                android:textColor="@color/BLACK" />
            <TextView
                android:id="@+id/tv_on_sales_of"
                style="@style/MediumTextStyleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:text="Zandu"
                android:textColor="@color/card_secondary_text_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16">

                <include layout="@layout/single_line_lay" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:layout_marginTop="20dp"
                android:text="Participating Outlets"
                android:textSize="16sp"
                android:textColor="@color/BLACK" />
            <TextView
                android:id="@+id/tvApplicableFor"
                style="@style/MediumTextStyleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:text="Zandu"
                android:textColor="@color/card_secondary_text_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16">

                <include layout="@layout/single_line_lay" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/constraintLayout3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_normal_16"
                android:layout_marginRight="@dimen/padding_normal_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                   <!-- <TextView
                        android:id="@+id/tv_on_sales_of"
                        style="@style/MediumTextStyleCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="4"
                        android:paddingRight="@dimen/padding_normal_8"
                        android:text=""
                        android:textColor="@color/card_secondary_text_color" />-->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLineVertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <include layout="@layout/single_line_veritical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    >

                  <!--  <TextView
                        android:id="@+id/tv_scheme_slab_per"
                        style="@style/UtilsSubHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text=""
                        android:textColor="@color/BLACK"
                        android:textStyle="bold" />-->


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llMoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_normal_16"
                android:paddingRight="@dimen/padding_normal_16"
                android:visibility="visible">

                <include layout="@layout/single_line_lay" />

                <TextView
                    style="@style/UtilsSubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_normal_4"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="24dp"
                    android:text="On Sale Of"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/ll_scheme_item_details_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <!--scheme slabs-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <include layout="@layout/single_line_lay" />
                </LinearLayout>
                <TextView
                    style="@style/UtilsSubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_normal_4"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="24dp"
                    android:text="Slab"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TableLayout
                    android:id="@+id/ll_scheme_slabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/WHITE"
                    android:scrollbarAlwaysDrawVerticalTrack="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <include layout="@layout/single_line_lay" />
            </LinearLayout>

            <Button
                android:id="@+id/btExpand"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_normal_8"
                android:layout_marginLeft="@dimen/padding_normal_8"
                android:layout_marginRight="@dimen/padding_normal_8"
                android:layout_marginTop="8dp"
                android:text="Expand" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
